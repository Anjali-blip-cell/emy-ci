#!/bin/bash

. /tmp/ci/builder.sh
cd /tmp

SECONDS=0

# Clone Kernel source
post_msg " Cloning Kernel Source "
. /tmp/ci/builder.sh -kt

# Clone ToolChain & AnyKernel
. /tmp/ci/builder.sh -tc -ak
post_msg "Successfully cloned all sources!
Total Size: $(du -sh /tmp | cut -d - -f 1 | cut -d / -f 1)
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
<b>Status : </b><a href='https://cirrus-ci.com/build/$CIRRUS_BUILD_ID'>cirrus-ci</a>"
